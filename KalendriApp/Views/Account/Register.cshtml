@model KalenderApp.Models.User

@{
    ViewData["Title"] = "Registreeru";
}

<!DOCTYPE html>
<html lang="et">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registreeru - Kalendriäpp</title>
    <style>
        /* Reset and General Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #e9f4fc;
            color: #444;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            min-height: 100vh;
        }

        /* Header Styles */
        header {
            width: 100%;
            max-width: 900px;
            background-color: #ffffff;
            padding: 15px 25px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 30px;
        }

            header a {
                color: #0077b6;
                text-decoration: none;
                font-weight: 500;
                font-size: 1rem;
                padding: 8px 12px;
                border-radius: 4px;
                transition: background-color 0.2s ease;
            }

                header a:hover {
                    background-color: #caf0f8;
                }

        /* Container Styles */
        .container {
            width: 100%;
            max-width: 450px;
            padding: 30px 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .header {
            font-size: 2rem;
            font-weight: bold;
            color: #007bff;
            margin-bottom: 25px;
        }

        h2 {
            font-size: 1.5rem;
            color: #0096c7;
            margin-bottom: 20px;
        }

        /* Form and Input Styles */
        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: 600;
            margin-bottom: 8px;
            color: #444;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 1rem;
            background-color: #f9f9f9;
        }

        .btn-primary {
            width: 100%;
            padding: 12px;
            background-color: #0077b6;
            color: #ffffff;
            border: none;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        /* Alert for Error Messages */
        .alert {
            margin-top: 15px;
            padding: 12px;
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            border-radius: 5px;
            font-size: 0.9rem;
        }
        /* General Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #e9f4fc;
            color: #444;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        /* Header Styles */
        header {
            width: 100%;
            max-width: 900px;
            background-color: #ffffff;
            padding: 15px 25px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            header h1 {
                font-size: 1.8rem;
                color: #0077b6;
            }

        /* Navigation Links */
        .nav-links {
            display: flex;
            gap: 15px;
        }

            .nav-links a {
                color: #0077b6;
                text-decoration: none;
                font-weight: 500;
                padding: 8px 12px;
                border-radius: 4px;
                transition: background-color 0.2s ease;
            }

                .nav-links a:hover {
                    background-color: #caf0f8;
                }
    </style>
</head>
<body>

    <header>
        <h1>Kalender</h1>
        <nav class="nav-links">
            <a href="/Home/Index">Avaleht</a>
            <a href="/Event/Index">Kalender</a>
            <a href="/Account/Login">Logi sisse</a>
            <a href="/Account/Register">Registreeru</a>
        </nav>
    </header>

    <div class="container">
        <div class="header">Kalendriäpp</div>
        <h2>Registreeru</h2>
        <form asp-action="Register" method="post">
            <div class="form-group">
                <label for="name">Nimi</label>
                <input name="Name" type="text" placeholder="Sisesta oma nimi" required />
            </div>
            <div class="form-group">
                <label for="email">E-post</label>
                <input name="Email" type="email" placeholder="Sisesta oma e-post" required />
            </div>
            <div class="form-group">
                <label for="password">Parool</label>
                <input name="Password" type="password" placeholder="Sisesta oma parool" required />
            </div>
            <div class="form-group">
                <label for="timezone">Ajatsoon</label>
                <input name="Timezone" type="text" value="Europe/Tallinn" placeholder="Sisesta oma ajatsoon" />
            </div>
            <button type="submit" class="btn-primary">Registreeru</button>
        </form>

        @if (ViewBag.ErrorMessage != null)

        {
            <div class="alert">@ViewBag.ErrorMessage</div>
        }
    </div>

</body>
</html>
